<div class="footer-container">
  <div class="footer-container--wrapper">
    <div class="footer-container--contact">
    <h3>Contact Us</h3>
    {{ parade_night }} evenings {{ parade_night_start_time }} to {{ parade_night_end_time }}<br />
      {% if parade_night_address %}
        {{ parade_night_address }}<br />
      {% endif %}
      {% if parade_night_city %}
        {{ parade_night_city }} {% if parade_night_province %} , {{ parade_night_province }} {% endif %}<br />
      {% endif %}
      {% if email_address %}
        <a href="mailto:{{ email_address }}">{{ email_address }}</a><br />
      {% endif %}
      {% if phone_number %}
        {{ phone_number }}<br />
      {% endif %}
    </div>
    <div class="footer-container--mailing">
      <h3>Mailing Address</h3>
      {{ mailing_address }}<br />
      {{ mailing_address_city }} {% if mailing_address_province %}, {{ mailing_address_province }} {% endif %}<br />
      {{ mailing_address_postal_code }}
    </div>
    <div class="footer-container--social">
      <div class="footer-container--login-logout">
        {% if logged_in %}
          <a href="{{ url('<front>') }}/user/logout">Logout</a>
        {% else %}
          <a href="{{ url('<front>') }}/user/login">Login</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>